<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomButtonSettings">
        <item name="android:background">@drawable/image_selector</item>
        <!--<item name="android:layout_marginLeft">@dimen/corners3</item>-->
        <!--<item name="android:layout_marginTop">@dimen/corners</item>-->
        <!--<item name="android:layout_marginRight">@dimen/corners3</item>-->
        <!--<item name="android:layout_marginBottom">@dimen/corners</item>-->
        <item name="android:clickable">true</item>
        <item name="android:paddingTop">@dimen/corners</item>
        <item name="android:paddingBottom">@dimen/corners</item>
    </style>

    <style name="shadowEffect1">
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="shadowEffect2">
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">10</item>
    </style>

    <style name="SpanTextKg" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_large_xx</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="SpanTextKgMini" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="SpanTextKgMiniInvoice" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/background2</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SpanTextKgListInvoice" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/background2</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textStyle">normal|italic</item>
    </style>

    <style name="SampleTheme" parent="android:Theme">
        <item name="numberPickerStyle">@style/NPWidget.Holo.NumberPicker</item>
    </style>

    <style name="SampleTheme.Light" parent="android:Theme.Light">
        <item name="numberPickerStyle">@style/NPWidget.Holo.Light.NumberPicker</item>
    </style>

    <style name="NPWidget">
        <item name="android:textAppearance">?android:attr/textAppearance</item>
    </style>

    <style name="NPWidget.NumberPicker">
        <item name="android:orientation">vertical</item>
        <item name="android:fadingEdge">vertical</item>
        <item name="android:fadingEdgeLength">50dip</item>
    </style>

    <style name="NPWidget.Holo.NumberPicker" parent="NPWidget.NumberPicker">
        <!--<item name="solidColor">@android:color/transparent</item>-->
        <item name="selectionDivider">@drawable/np_numberpicker_selection_divider</item>
        <item name="selectionDividerHeight">2dip</item>
        <item name="internalLayout">@layout/number_picker_with_selector_wheel</item>
        <item name="internalMinWidth">64dip</item>
        <item name="internalMaxHeight">180dip</item>
        <item name="virtualButtonPressedDrawable">@drawable/item_background_holo_dark</item>
    </style>

    <style name="NPWidget.Holo.Light.NumberPicker" parent="NPWidget.Holo.NumberPicker">
        <item name="virtualButtonPressedDrawable">@drawable/item_background_holo_light</item>
    </style>
</resources>