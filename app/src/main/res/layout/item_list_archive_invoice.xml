<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:background="@color/transparent"
        >

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="@dimen/stroke"
            android:layout_marginTop="@dimen/stroke">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/background">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageReady" android:src="@drawable/ic_invoice"
                    android:contentDescription="@null"
                    android:layout_gravity="center"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="â„–"
                          android:textColor="@drawable/text_selector"
                          android:textSize="@dimen/text_margin"
                          android:gravity="center" android:layout_margin="@dimen/stroke"
                          android:background="@drawable/item_selector"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/id_row"
                          android:textColor="@drawable/text_selector" android:background="@drawable/item_selector"
                          android:textStyle="bold"
                          android:textSize="@dimen/text_margin"
                          android:layout_margin="@dimen/stroke"
                          android:gravity="center_vertical|center_horizontal"
                          android:text="12"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/background"
                    android:layout_marginLeft="@dimen/stroke">

                <TextView
                        android:text="12:45:16"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/textView5"
                        android:layout_weight="1"
                        android:gravity="center"/>

                <TextView
                        android:text="56-78"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/textView4"
                        android:layout_weight="1"
                        android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:baselineAligned="false"
                    android:layout_weight="1"
                    android:background="@color/background"
                    android:layout_marginLeft="@dimen/stroke">

                <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                          android:id="@+id/weight_row"
                          android:textColor="@drawable/text_selector" android:background="@drawable/item_selector"
                          android:textStyle="bold|italic"
                          android:textSize="@dimen/text_large_x" android:layout_margin="@dimen/stroke"
                          android:gravity="right|center"
                          android:singleLine="true"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>