<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_height="fill_parent"
              android:paddingBottom="5dp"
              android:paddingTop="5dp"
              android:paddingLeft="5dp"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:id="@+id/layout_item_bluetooth"
              android:descendantFocusability="blocksDescendants"
              android:focusable="false">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:focusable="false">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="fill_parent" android:layout_weight="1"
                android:focusable="false">
            <TextView android:layout_height="fill_parent"
                      android:textSize="@dimen/text_medium"
                      android:layout_width="wrap_content"
                      android:id="@+id/bottomText"
                      android:textColor="@color/background2" android:focusable="false" android:focusableInTouchMode="false"
                      android:clickable="false"
                      android:gravity="center"
                      android:inputType="none"
                      android:singleLine="true"/>
            <TextView android:layout_height="fill_parent"
                      android:textSize="@dimen/text_large"
                      android:layout_width="fill_parent"
                      android:id="@+id/topText"
                      android:textColor="@color/background2" android:focusable="false" android:focusableInTouchMode="false"
                      android:clickable="false" android:textStyle="bold"
                      android:gravity="bottom|right"
                      android:inputType="none"
                      android:singleLine="true"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="@dimen/corners3"
                android:focusable="false">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="кг"
                    android:gravity="bottom"
                    android:layout_marginBottom="@dimen/padding"
                    android:focusable="false"
                    android:inputType="none"
                    android:singleLine="true"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>